{
    "name": "pytorch-rocm",
    "dockerFile": "Dockerfile",
    "postCreateCommand": "pip install -r requirements.txt",
    "runArgs": [
        "--device=/dev/kfd",
        "--device=/dev/dri",
        "--group-add=video",
        "--ipc=host",
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--shm-size",
        "8G"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/opt/venv/bin/python"
            }
        }
    }
}
